doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Hola Pug
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU", crossorigin="anonymous")
    
  body(class="bg-dark")
    div
      ul(class="nav justify-content-center")
        li(class="nav-item")
          a(class="nav-link", href="http://localhost:8090") Ingresar Productos
        li(class="nav-item")
          a(class="nav-link", href="http://localhost:8090/api/productos") Ver Listado de Productos
      h1(class="text-light p-5") Productos
      table(class="table table-dark table-hover w-50 mx-5")
        thead
          tr
            th( scope="col") Id
            th( scope="col") Nombre
            th( scope="col") Precio
            th( scope="col") Foto
        tbody
          each element in items
            tr
              th(scope="row" class="align-middle fs-4")= element.id
              td(class="text-center align-middle fs-4")= element.title
              td(class="text-center align-middle fs-4")= element.price
              td(class="text-center align-middle fs-4")
                img( src=element.thumbnail alt="" style="width: 100px;") 
            
          
    
